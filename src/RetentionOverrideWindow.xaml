<Window x:Class="LudusaviRestic.RetentionOverrideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource LOCLuduRestSetRetentionPolicyTitle}"
        Width="400" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource TextBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Name="GameNameText" FontSize="14" FontWeight="Bold"
                   Margin="0,0,0,15" TextWrapping="Wrap"/>

        <!-- Fields -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Help text -->
            <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,12"
                       TextWrapping="Wrap" FontStyle="Italic" FontSize="11"
                       Text="{DynamicResource LOCLuduRestRetentionOverrideFieldHelp}"/>

            <!-- Keep Last -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource LOCLuduRestOverrideKeepLastHeader}"
                       VerticalAlignment="Center" Margin="0,0,15,8"/>
            <TextBox Grid.Row="1" Grid.Column="1" Name="KeepLastBox" Margin="0,0,0,8" Padding="4,3"/>
            <TextBlock Grid.Row="1" Grid.Column="2" Name="KeepLastDefault" VerticalAlignment="Center"
                       Margin="10,0,0,8" FontSize="11" Foreground="Gray"/>

            <!-- Keep Daily -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource LOCLuduRestOverrideKeepDailyHeader}"
                       VerticalAlignment="Center" Margin="0,0,15,8"/>
            <TextBox Grid.Row="2" Grid.Column="1" Name="KeepDailyBox" Margin="0,0,0,8" Padding="4,3"/>
            <TextBlock Grid.Row="2" Grid.Column="2" Name="KeepDailyDefault" VerticalAlignment="Center"
                       Margin="10,0,0,8" FontSize="11" Foreground="Gray"/>

            <!-- Keep Weekly -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource LOCLuduRestOverrideKeepWeeklyHeader}"
                       VerticalAlignment="Center" Margin="0,0,15,8"/>
            <TextBox Grid.Row="3" Grid.Column="1" Name="KeepWeeklyBox" Margin="0,0,0,8" Padding="4,3"/>
            <TextBlock Grid.Row="3" Grid.Column="2" Name="KeepWeeklyDefault" VerticalAlignment="Center"
                       Margin="10,0,0,8" FontSize="11" Foreground="Gray"/>

            <!-- Keep Monthly -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="{DynamicResource LOCLuduRestOverrideKeepMonthlyHeader}"
                       VerticalAlignment="Center" Margin="0,0,15,8"/>
            <TextBox Grid.Row="4" Grid.Column="1" Name="KeepMonthlyBox" Margin="0,0,0,8" Padding="4,3"/>
            <TextBlock Grid.Row="4" Grid.Column="2" Name="KeepMonthlyDefault" VerticalAlignment="Center"
                       Margin="10,0,0,8" FontSize="11" Foreground="Gray"/>

            <!-- Keep Yearly -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="{DynamicResource LOCLuduRestOverrideKeepYearlyHeader}"
                       VerticalAlignment="Center" Margin="0,0,15,0"/>
            <TextBox Grid.Row="5" Grid.Column="1" Name="KeepYearlyBox" Padding="4,3"/>
            <TextBlock Grid.Row="5" Grid.Column="2" Name="KeepYearlyDefault" VerticalAlignment="Center"
                       Margin="10,0,0,0" FontSize="11" Foreground="Gray"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="RemoveButton" Content="{DynamicResource LOCLuduRestRemoveOverride}"
                    Click="OnRemove" Padding="12,6" Margin="0,0,10,0"/>
            <Button Content="{DynamicResource LOCLuduRestSave}" Click="OnSave"
                    Padding="12,6" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="{DynamicResource LOCLuduRestCancel}" Click="OnCancel"
                    Padding="12,6" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
