<UserControl x:Class="LudusaviRestic.GameOverrideSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="620" MinHeight="460">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Width="600" Height="420">
            <StackPanel Margin="0,0,0,8">
                <TextBlock Text="{Binding L_GameLabel}" FontWeight="Bold"/>
                <TextBlock Text="{Binding GameName}" Margin="0,0,0,8"/>

                <CheckBox Content="{Binding L_EnableCustom}" IsChecked="{Binding OverrideGlobalSettings}" Margin="0,0,0,12"/>

                <StackPanel IsEnabled="{Binding OverrideGlobalSettings}">
                    <GroupBox Header="{Binding L_GroupBackupTriggers}" Margin="0,0,0,10">
                        <StackPanel>
                            <CheckBox Content="{Binding L_BackupOnStop}" IsChecked="{Binding BackupOnGameStopped}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0" VerticalAlignment="Center">
                                <CheckBox Content="{Binding L_BackupDuringGameplay}" IsChecked="{Binding BackupDuringGameplay}"/>
                                <TextBlock Text="{Binding L_IntervalMinutes}" Margin="16,0,4,0" VerticalAlignment="Center"/>
                                <TextBox Width="60" Text="{Binding GameplayBackupIntervalMinutes}"/>
                            </StackPanel>
                            <CheckBox Content="{Binding L_BackupOnUninstall}" IsChecked="{Binding BackupOnUninstall}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="{Binding L_GroupRetention}" Margin="0,0,0,10">
                        <StackPanel>
                            <CheckBox Content="{Binding L_UseCustomRetention}" IsChecked="{Binding UseCustomRetention}" Margin="0,0,0,6"/>
                            <UniformGrid Columns="2" Margin="0,4,0,0" IsEnabled="{Binding UseCustomRetention}">
                                <TextBlock Text="{Binding L_KeepLast}" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding KeepLast}" Width="60" Margin="0,2,0,2"/>
                                <TextBlock Text="{Binding L_KeepDaily}" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding KeepDaily}" Width="60" Margin="0,2,0,2"/>
                                <TextBlock Text="{Binding L_KeepWeekly}" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding KeepWeekly}" Width="60" Margin="0,2,0,2"/>
                                <TextBlock Text="{Binding L_KeepMonthly}" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding KeepMonthly}" Width="60" Margin="0,2,0,2"/>
                                <TextBlock Text="{Binding L_KeepYearly}" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding KeepYearly}" Width="60" Margin="0,2,0,2"/>
                            </UniformGrid>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="{Binding L_GroupCustomTags}">
                        <StackPanel>
                            <TextBlock Text="{Binding L_CustomTagsHelp}" TextWrapping="Wrap"/>
                            <TextBox Text="{Binding CustomTagsText}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="{Binding L_Reset}" Margin="0,0,8,0" Width="75" IsEnabled="{Binding OverrideGlobalSettings}" Click="Reset_Click"/>
            <Button Content="{Binding L_Save}" Margin="0,0,8,0" Width="75" Click="Save_Click"/>
            <Button Content="{Binding L_Cancel}" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
